# Backend Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration (PostgreSQL Docker - port 5433 to avoid conflicts with local Postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/ftechnology
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=ftechnology

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Application
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:4200

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM=onboarding@resend.dev
APP_NAME=FTechnology

# Google OAuth (Optional - for social authentication)
# Get these from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback
